{
  "openapi": "3.0.0",
  "info": {
    "title": "CBL Partner APIs",
    "description": "This is test on CBL APIs",
    "contact": {
      "email": "william.kamuyu@gapstack.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://konnectapigateway.creditbank.co.ke",
      "description": "CBL Dev API Gateway"
    }
  ],
  "tags": [
    {
      "name": "Networking",
      "description": "Networking API"
    },
    {
      "name": "Notifications",
      "description": "Instant Payment Notifications"
    },
    {
      "name": "Accounts",
      "description": "CBL Accounts"
    }
  ],
   "paths": {
    "/network-request": {
      "get": {
        "tags": [
          "Networking"
        ],
        "summary": "Checks on the CBS if its up or down",
        "description": "Network Request on the CBS\n",
        "operationId": "networkRequest",
        "parameters": [
          {
            "name": "x-app-id",
            "in": "header",
            "description": "pass the project id",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "api-key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created standing order",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/networkingResponse"
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    },
     "/ipn": {
      "get": {
        "tags": [
          "Notifications"
        ],
        "summary": "Sends Notifications to Merchants Endpoint",
        "description": "Send Notification to Clients Webhook\n",
        "operationId": "instantPaymentNotification",
        "parameters": [
          {
            "name": "x-app-id",
            "in": "header",
            "description": "pass the project id",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "api-key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Send Notification after transaction",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ipnRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Notification saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ipnResponse"
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    },
    "/account-inquiry": {
      "post": {
        "tags": [
          "Accounts"
        ],
        "summary": "Get account information",
        "description": "Get account information\n",
        "operationId": "accountInquiry",
        "parameters": [
          {
            "name": "x-app-id",
            "in": "header",
            "description": "pass the project id",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "api-key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Create an account inquiry Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/accountInquiryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully retrieved account information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/accountInquiryResponse"
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    }
   },
   "components": {
    "schemas": {
      "ipnRequest": {
        "required": [
          "notificationType",
          "notificationSubType",
          "data"
        ],
        "type": "object",
        "properties": {
          "notificationType": {
            "type": "string",
            "example": "FT"
          },
          "notificationSubType": {
            "type": "string",
            "example": "CBS_FT"
          },
          "data": {
            "amount": {
              "type": "string",
              "example":"300"
            },
            "transactionType": {
              "type": "string",
              "example":"credit"
            },
            "transactionReference":{
              "type":"string",
              "example":"12345"
            },
            "CBSReference": {
              "type":"string",
              "example":"FT22321YXDV8"
            },
            "mobileNumber": {
              "type":"string",
              "example":"254713258892"
            },
            "custAccount": {
              "type":"string",
              "example":"0021024000039"
            },
            "timestamp":{
              "type":"string",
              "example":"2023-01-13 12:40:55"
            }
          }
        }
      },
       "networkingResponse": {
        "type": "object",
        "properties": {
          "Response code": {
            "type": "string",
            "example": "00"
          },
          "Date and time transmission": {
            "type": "string",
            "example": "0612095546"
          }
        }
      },
        "ipnResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "string",
            "example": "201"
          },
          "message": {
            "type": "string",
            "example": "Notification saved successfully"
          },
          "data": {
            "type": "string",
            "example": "null"
          }
        }
      },
      "accountInquiryRequest": {
        "required": [
          "phoneNumber"
        ],
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "254712345678"
          }
        }
      }
    }
  }
}