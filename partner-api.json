      }
    }
   },
   "components": {
    "schemas": {
      "ipnRequest": {
        "required": [
          "notificationType",
          "notificationSubType",
          "data"
        ],
        "type": "object",
        "properties": {
          "notificationType": {
            "type": "string",
            "example": "FT"
          },
          "notificationSubType": {
            "type": "string",
            "example": "CBS_FT"
          },
          "data": {
            "type": "object",
            "example":{
              "amount":"300",
              "transactionType":"credit",
              "transactionReference":"12345",
              "CBSReference": "FT22321YXDV8",
              "mobileNumber": "254727123456",
              "momoReference": "RTGH87685",
              "custAccount": "0021024000038",
              "timestamp": "2023-01-13 12:40:55"
            }
          }
        }
      },
       "balanceInquiryRequest": {    
        "type": "object",
        "properties": {
           "account": {
             "type":"string",
             "example":"0021024000038"

           }
        }
      },
       "internalFundsTransferRequest": {
        "required": [
          "amount",
          "accountTo",
          "accountFrom",
          "endToEndRef",
          "paymentNarrative"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "example": 3000
          },
          "accountTo": {
            "type": "string",
            "example": "0021024000039"
          },
            "accountFrom": {
            "type": "string",
            "example": "0021024000038"
          },
            "endToEndRef": {
              "type":"string",
              "example": "ADHDKDUDHSJ"
          },
          "paymentNarrative": {
            "type": "string",
            "example": "Transfer funds from your CBL account to other CBL accounts"
          }
        }
      },
      "consumerInternalFtRequest": {
        "required": [
          "amount",
          "accountTo",
          "accountFrom",
          "endToEndRef",
          "paymentNarrative"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "example": 3000
          },
          "accountTo": {
            "type": "string",
            "example": "0021024000039"
          },
            "accountFrom": {
            "type": "string",
            "example": "0021024000038"
          },
            "endToEndRef": {
              "type":"string",
              "example": "ADHDKDUDHSJ"
          },
          "paymentNarrative": {
            "type": "string",
            "example": "Transfer funds from your CBL account to other CBL accounts"
          }
        }
      },
       "networkingResponse": {
        "type": "object",
        "properties": {
          "Response code": {
            "type": "string",
            "example": "00"
          },
          "Date and time transmission": {
            "type": "string",
            "example": "0612095546"
          }
        }
      },
       "balanceInquiryResponse": {
        "type": "object",
        "properties": {
          "responseCode": {
            "type": "string",
            "example": "00"
          },
          "dateAndTimeTransmission": {
            "type": "string",
            "example": "0306150321"
          },
          "currencyCode": {
            "type": "string",
            "example": "404"
          },
          "actualBalance": {
            "type": "string",
            "example": "20000"
          },
          "availableBalance": {
            "type": "string",
            "example": "20000"
          }
        }
      },
       "ipnResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "string",
            "example": "201"
          },
          "message": {
            "type": "string",
            "example": "Notification saved successfully"
          },
          "data": {
            "type": "string",
            "example": "null"
          }
        }
      }
    }
  }
}
