   "paths": {
    "/network-request": {
      "get": {
        "tags": [
          "Networking"
        ],
        "summary": "Checks on the CBS if its up or down",
        "description": "Network Request on the CBS\n",
        "operationId": "networkRequest",
        "parameters": [
          {
            "name": "x-app-id",
            "in": "header",
            "description": "pass the project id",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "api-key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created standing order",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/networkingResponse"
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    },
     "/ipn": {
      "get": {
        "tags": [
          "Notifications"
        ],
        "summary": "Sends Notifications to Merchants Endpoint",
        "description": "Send Notification to Clients Webhook\n",
        "operationId": "instantPaymentNotification",
        "parameters": [
          {
            "name": "x-app-id",
            "in": "header",
            "description": "pass the project id",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "api-key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Send Notification after transaction",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ipnRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Notification saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ipnResponse"
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    },
     "/balance-inquiry": {
      "post": {
        "tags": [
          "Accounts"
        ],
        "summary": "Get account balance",
        "description": "Get account balance\n",
        "operationId": "balanceInquiry",
        "parameters": [
          {
            "name": "x-app-id",
            "in": "header",
            "description": "pass the project id",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "api-key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Create a balance inquiry Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/balanceInquiryRequest"
